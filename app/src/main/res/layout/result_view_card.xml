<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="5dp"
    android:padding="10dp" >

    <androidx.cardview.widget.CardView
        android:id="@+id/resultUserCard"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/resultScoreCard"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#aee5d4"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_column="1"
        app:layout_columnWeight="2"
        app:layout_row="0"
        app:layout_rowWeight="0.5">

        <TextView
            android:id="@+id/textUser"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeTextType="uniform"
            android:paddingHorizontal="10dp"
            android:gravity="center"
            android:text="TextViewg"
            android:autoSizeMaxTextSize="25sp"
            android:textAlignment="center"
            android:textColor="#19452e"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_marginStart="25dp"
        android:id="@+id/resultScoreCard"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_alignParentEnd="true"
        android:clickable="true"
        android:focusable="true"
        app:cardBackgroundColor="#aee5d4"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        app:layout_column="1"
        app:layout_columnWeight="2"
        app:layout_row="0"
        app:layout_rowWeight="0.5"
        >

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoSizeMaxTextSize="25sp"
            android:autoSizeTextType="uniform"
            android:gravity="center"
            android:paddingHorizontal="10dp"
            android:text="TextViewkhjhkljhkhjjkjhj"
            android:textAlignment="center"
            android:textColor="#19452e"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>
</RelativeLayout>